<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:f9p="clr-namespace:Forms9Patch;assembly=Forms9Patch"
    xmlns:local="clr-namespace:Forms9PatchDemo"
	x:Class="Forms9PatchDemo.StretchIssuePage"
    BackgroundColor="White"
    >

    <StackLayout
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand">

        <Image
            Source="{local:ImageMultiResource Forms9PatchDemo.Resources.icon_home_active}"
            HeightRequest="50"
            VerticalOptions="Fill"
            Aspect="AspectFit"/>
        <Label Text="Xamarin" HorizontalOptions="Center" />
        <BoxView Color="Black" HeightRequest="1"/>
        
        <f9p:Image
            Source="{local:ImageMultiResource Forms9PatchDemo.Resources.icon_home_active}"
            HeightRequest="50"
            VerticalOptions="Fill"
            Fill="AspectFit" />
        <Label Text="Forms9Patch" HorizontalOptions="Center" />
        <BoxView Color="Black" HeightRequest="1"/>
        <BoxView Color="Transparent" HeightRequest="40"/>

        <Grid 
            ColumnSpacing="5">
        
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <f9p:Image 
                Grid.Row="0"
                BackgroundColor="Red"
                Source="{local:ImageMultiResource Forms9PatchDemo.Resources.icon_home_active}"
                Fill="AspectFit" />
            <Label Text="Forms9Patch" HorizontalOptions="Center"  Grid.Column="0" Grid.Row="1"/>

            <Image
                Grid.Column="1"
                BackgroundColor="Lime"
                Source="{local:ImageMultiResource Forms9PatchDemo.Resources.icon_home_active}"
                Aspect="AspectFit"/>
            <Label Text="Xamarin" HorizontalOptions="Center" Grid.Column="1" Grid.Row="1"/>

            <f9p:Image
                Grid.Column="2"
                BackgroundColor="Yellow"
                Source="{local:ImageMultiResource Forms9PatchDemo.Resources.icon_home_active}"
                Fill="AspectFit"/>
            <Label Text="Forms9Patch" HorizontalOptions="Center" Grid.Column="2" Grid.Row="1"/>

            <Image
                Grid.Column="3"
                BackgroundColor="Aqua"
                Source="{local:ImageMultiResource Forms9PatchDemo.Resources.icon_home_active}"
                Aspect="AspectFit"/>
            <Label Text="Xamarin" HorizontalOptions="Center" Grid.Column="3" Grid.Row="1"/>

        </Grid>

    </StackLayout>
	

</ContentPage>
